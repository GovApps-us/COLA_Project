<div class="inlineBlock container d-flex">
  <h1 class="h2 border-bottom px-2 pt-4 pb-2"> Manage Subscriptions </h1>
</div>
	
<div class="container-fluid">
  <div class="row mt-4">
    <!-- left col -->
    <div class="col-0 col-md-1 col-lg-2">
    </div>
    <!-- main center screen -->
    <div class="col-12 col-md-10 col-lg-8">
      <div class="row justify-content-start">
	<div class="col-12 col-md-5 col-lg-5 mb-3">
	  <h2 class="h5 ml-4"><b>Email</b></h2>
	  <span class="ml-4">
	    {{#if email}}
	    {{this.email}}
	    {{else}}
	    (Error retrieving)
	    {{/if}}
	  </span>
	</div>
	<div class="col-12 col-md-7 col-lg-7" id="subscriptionFormContainer">
	  <!--	  <h2 class="h5 ml-4" id="addSubscription"><b>Add Subscription</b></h2>
	    -->
	  <div id="successContainer" style="display:none">
	    <div class="usa-alert usa-alert--success">
	      <div class="usa-alert__body">
		<h3 class="usa-alert__heading">Subscribed!</h3>
		<p class="usa-alert__text">You subscribed to <span id="subscribedSpan">{error}</span></p>
		<p class="usa-alert__text"><a id="subscribeAdditional" href="#subscribeContainer">Subscribe to additional posts</a></p>
	      </div>
	    </div>
	    <br><br><br>
	  </div>
	  
	  <div id="addSubscription">
	    <div class="usa-alert usa-alert--info">
	      <div class="usa-alert__body">
		<h3 class="usa-alert__heading">New subscription</h3>
		<p id="postVal" class="usa-alert__text val">Select a post</p>
		<p id="templateVal" class="usa-alert__text val">Choose template</p>
	      </div>
	    </div>
	    <form id="addPostForm" class="usa-form">
	      
	      <!-- 1. choose a post -->
	      <div class="">
		<div class="">
		  <label for="postSelect" class="usa-label mt-2 mr-2">1. Post</label>
		  <select id="postSelect" class="usa-select ml-4 input-max-width" placeholder="Search for post" style="max-width:400px" onchange="validate_subscription()">
		    <option></option>
		    {{#each post_info}}
		    <option data-COLARatesId="{{this.id}}">{{this.country}} ({{this.post}})</option>
		    {{/each}}
		  </select>
		</div>
		<!-- 2 upload template -->
		<div id="templateGroup">
		  <div class="mt-3">
		    <label for="uploadTemplate" class="usa-label">2. Template (doc/docx)</label>
		    <input type="file" accept=".doc, .docx" id="uploadTemplate" class="usa-input btn btn-sm ml-4 input-max-width" placeholder="Upload a template" onchange="validate_subscription()">
		  </div>
		  <!-- Or use one of my other templates... -->
		  <div class="mt-2">
		    <label for="templateSelect" class="usa-label ml-2">...or reuse a previous templates...</label>
		    <select id="templateSelect" class="usa-select ml-4 input-max-width" onchange="validate_subscription()">
		      <option></option>
		      {{#each templates}}
		      <option data-templateId="{{this.id}}">{{this.name}}</option>
		      {{/each}}
		    </select>
		  </div>
		</div>
		<!-- Preview or upload... -->
		<div class="mt-3" id="addNewSubscriptionButtons">
		  <!--		<label for="uploadTemplate" class="">3. Subscribe </label>
		    -->
		  <!--		<button id="previewNewSubscription" class="btn btn-sm btn-secondary ml-3">Preview</button>
		    -->
		  <span id="newSubscriptionContainer">
		    <button id="submitNewSubscription" class="ml-4 btn usa-button"
			    data-container="body" data-toggle="popover"
			    data-placement="right">Subscribe</button>
		  </span>
		</div>
	    </form>
	    </div>
	  </div>
	</div>
      </div>
      <!-- second row in main screen -->
      <div class="row justify-content-around mt-4 mb-4">
	<div class="col-12">
	  <div class="mt-4 corner-border px-4" id="subscriptionsOuterContainer">
	    <div class="row">
	      <h2 class="h5" id="currentSubscriptions"><b>Current Subscriptions</b></h2>
	    </div>
	    <div id="subscriptionsContainer" class="row ml-1 mt-1">
	      <table class="table" id="subscriptionsTable">
		<thead>
		  <tr>
		    <th scope="col">Post</th>
		    <th scope="col">Country</th>
		    <th scope="col">Allowance</th>
		    <th scope="col">Last Adjusted</th>
		    <th scope="col"></th>
		  </tr>
		</thead>
		
		<tbody class="subscriptions" id="subscriptionTbody">

		</tbody>
	      </table>
	      <div id="subscriptionsContainerSpinner">
		<i class="fa fa-spinner fa-spin spinner"></i>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
      
    </div>
    <!-- right col -->
    <div class="col-0 col-md-1 col-lg-2">
    </div>
  </div>
</div>

<!-- modal stuff -->
<div id="previewModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="h5 modal-title">Preview</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="center-text">
	  <i class="fa fa-spinner fa-spin spinner"></i>
	</p>
      </div>
      <div class="modal-footer">
	<button type="button" class="btn btn-primary">Save changes</button>
	<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

