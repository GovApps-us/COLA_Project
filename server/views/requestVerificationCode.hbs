{{#if loggedIn}}
<div class="container mt-4 mb-4">
  <div>
    <div class="usa-alert usa-alert--warning max-width-900 mt-2 mt-md-4 mt-lg-5">
      <div class="usa-alert__body">
	<span>
	  <h2 class="h3 usa-alert__heading">Currently Logged In</h2>
	</span>
	<p class="usa-alert__text">You are currently logged in as {{email}}. Please <a title="Logout" href="/logout?redirect=requestverificationcode" class="usa-link">logout</a> and try again.</p>
      </div>
    </div>
  </div>
</div>
{{else}}
<div class="container gridRows">
  <div class="container">
    <div id="alertContainer" class="row justify-content-around">
      <div id="errorAlert" class="usa-alert usa-alert--error max-width-900 width-90 mt-4" style="display:none;">
	<div class="usa-alert__body">
	  <h2 class="h3 usa-alert__heading">Error</h2>
	  <p class="usa-alert__text">
	    Something unexpected occured. Please <a class="usa-link" href="/requestverificationcode">refresh</a> page and try again.
	  </p>
	</div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-around my-5">
      <div id="loginFormOuterContainer" class="">
	<div id="loginFormInnerContainer" class="shadow-1 px-2 pt-1 pb-2">
	  <div class="text-center">
	    <h1 class="h4">Request Email Verification Code</h1>
	  </div>
	  <div class="mx-2">
	    <form class="" method="POST" action="/requestverificationcode">
	      <div class="form-group">
		<label for="email" class="usa-label"><strong>Email</strong></label>
		<span class="usa-error-message" id="emailError" role="alert"
		      style="display:none">Invalid email</span>
		<span class="usa-error-message" id="invalid" role="alert"
		      style="display:none"></span>
		<input class="usa-input" id="email" name="username"
		       oninput="validateEmail(this.value, this, document.getElementById('emailError'), false)">
	      </div>
	      <div class="form-group">
		<div id="submitButtonContainer" class="row align-items-end">
		  <button id="submitEmail" type="submit" class="usa-button ml-md-4 ml-2">Resend</button>
		  <span class="mt-2 ml-3 ml-md-1 sm">No account?
		    <a type="link" class="usa-link" href="/create_account">Create account</a>
		  </span>
		</div>
	      </div>
	    </form>
	  </div>
	</div>
	<br>
      </div>
    </div>
  </div>
  <div></div>
  {{/if}}
</div>
